/**
 * @name Change Colors on Click,Hover & Selection
 * @author Simple Themes
 * @authorId 923599273139007530
 * @version 6.9
 * @description you can change your color anytime! (just click edit and change the color)
 */

 *:hover {
    color: aqua; /*change hover color here */
 }

 *:active {
    color: yellow; /* change click color here */
 }

 *::selection {
    background-color: red;  /* change selection color here */
    color: black;
 }
